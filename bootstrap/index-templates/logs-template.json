{
  "index_patterns": ["logs-*"],
  "priority": 100,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "timestamp": { "type": "date" },
        "level":     { "type": "keyword" },
        "message":   { "type": "text" },
        "service":   { "type": "keyword" },
        "host":      { "type": "keyword" },
        "file":      { "type": "text" },
        "line":      { "type": "integer" },
        "details":   { "type": "nested" }
      }
    }
  }
}
