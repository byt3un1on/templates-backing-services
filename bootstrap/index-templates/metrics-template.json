{
  "index_patterns": ["metrics-*"],
  "priority": 100,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "timestamp": { "type": "date" },
        "metric":    { "type": "keyword" },
        "value":     { "type": "double" },
        "host":      { "type": "keyword" }
      }
    }
  }
}
